<article class="speakerslist <% if (pageID === 'home') { %> jumbotron hidden-xs <% } %>">
    <div class="container">
        <div class="row">
            <% contributors.forEach( (item) => { %>
                <div class="<% if (pageID === 'home') { %> col-sm-4 text-center <% } else { %> col-sm-8 <% } %>">
                    <h3 class="speakerslist-title"><%= item.title %></h3>
                    <h5 class="speakerslist-name">with <a href="/contributors/<%= item.shortname %>"><%= item.name %></a></h5>
                    <p class="speakerslist-info">
                        <a href="/contributors/<%= item.shortname %>">
                            <% if (pageID === 'home') { %>
                                <img class="speakerslist-img img-circle" src="/images/contributors/<%= item.shortname %>_tn.png" alt="Photo of <%= item.name %>"></a>
                            <% } %>

                            <% if (pageID === 'contributors') { %>
                                <img class="speakerslist-img img-circle pull-left" src="/images/contributors/<%= item.shortname %>_tn.png" alt="Photo of <%= item.name %>"></a>
                            <% } %>
                        </a>
                        <% if (pageID !== 'home') { %>
                            <%= item.summary %>
                        <% } %>
                    </p>
                </div>
            <% }); %>
        </div><!-- row -->
    </div><!-- container -->
</article>